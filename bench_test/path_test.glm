import path

fn testExt() {
    assert(['.txt', ''] == 
        [path.filepath.ext('abc.txt'),
         path.filepath.ext('abc')])
}

fn testWalk() {

    let list = []
    path.filepath.walk('data', fn(name, info) {
        list.add((name, info.isDir(), path.filepath.ext(name)))
    })

    assert([ 
        ('data', true, ''), 
        ('data/empty', false, ''), 
        ('data/lines.txt', false, '.txt') ] == list)
}

fn main(args) {
    testExt()
    testWalk()
}
