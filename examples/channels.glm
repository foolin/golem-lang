fn sum(s, c) {
	c.send(s.reduce(0, |acc, x| => acc+x))
}

let s = [7, 2, 8, -9, 4, 0]
let n = len(s)/2
let c = chan()

go sum(s[:n], c)
go sum(s[n:], c)

println([c.recv(), c.recv()])
